{
  "type": "device:mailer",
  "logo": "https://raw.githubusercontent.com/nodemailer/nodemailer/master/assets/nm_logo_1000x680.png",
  "online": true,
  "meshblu": {
    "version": "2.0.0",
    "whitelists" : {
      "configure": {
        "sent": {
          "*": true
        },
        "update": {
          "*": true
        }
      },
      "message": {
        "received": {
          "*": true
        },
        "from": {
          "*": true
        }
      }
    }
  },
  "optionsSchema": {
    "properties": {
      "service": {
        "default": "",
        "enum": [
          "",
          "1und1",
          "AOL",
          "DebugMail.io",
          "DynectEmail",
          "FastMail",
          "GandiMail",
          "Gmail",
          "Godaddy",
          "GodaddyAsia",
          "GodaddyEurope",
          "hot.ee",
          "Hotmail",
          "iCloud",
          "mail.ee",
          "Mail.ru",
          "Mailgun",
          "Mailjet",
          "Mandrill",
          "Naver",
          "Postmark",
          "QQ",
          "QQex",
          "SendCloud",
          "SendGrid",
          "SES",
          "Sparkpost",
          "Yahoo",
          "Yandex",
          "Zoho"
        ],
        "type": "string"
      },
      "host": {
        "type": "string"
      },
      "port": {
        "type": "integer"
      },
      "secure": {
        "default": null,
        "type": [
          "null",
          "boolean"
        ]
      },
      "auth": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "pass": {
            "type": "string",
            "x-schema-form": {
              "type": "password"
            }
          }
        }
      }
    },
    "type": "object"
  },
  "messageSchema": {
    "properties": {
      "message": {
        "properties": {
          "from": {
            "type": "string"
          },
          "to": {
            "type": "string"
          },
          "subject": {
            "type": "string"
          },
          "html": {
            "type": "string",
            "x-schema-form": {
              "type": "textarea"
            }
          },
          "text": {
            "type": "string",
            "x-schema-form": {
              "type": "textarea"
            }
          }
        },
        "type": "object"
      }
    },
    "type": "object"
  }
}
