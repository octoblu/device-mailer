{
  "online": true,
  "type": "device:mailer",
  "logo": "https://raw.githubusercontent.com/nodemailer/nodemailer/master/assets/nm_logo_1000x680.png",
  "meshblu": {
    "forwarders": {
      "received": [
        {
          "type": "webhook",
          "url": "http://localhost:1337/message",
          "method": "POST",
          "generateAndForwardMeshbluCredentials": true
        }
      ],
      "config": [
        {
          "type": "webhook",
          "url": "http://localhost:1337/encrypt-options",
          "method": "POST",
          "generateAndForwardMeshbluCredentials": true
        }
      ]
    }
  },
  "messageSchema": {
    "type": "object",
    "properties": {
      "from"   : { "type": "string" },
      "to"     : { "type": "string" },
      "subject": { "type": "string" },
      "text"   : {
        "type": "string",
        "x-schema-form": { "type": "textarea" }
      },
      "html"   : {
        "type": "string",
        "x-schema-form": { "type": "textarea" }
      }
    }
  },
  "optionsSchema": {
    "type": "object",
    "properties": {
      "service": { "type": "string" },
      "host"   : { "type": "string" },
      "port"   : { "type": "integer" },
      "secure" : { "type": ["null","boolean"], "default": null },
      "auth": {
        "type": "object",
        "properties": {
          "user": { "type": "string" },
          "pass": { "type": "string" }
        }
      }
    }
  }
}
