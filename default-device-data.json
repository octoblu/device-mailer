{
  "type": "device:mailer",
  "meshblu": {
    "forwarders": {
      "received": [
        {
          "type": "webhook",
          "url": "https://mailer.octoblu.com/message",
          "method": "POST",
          "generateAndForwardMeshbluCredentials": true
        }
      ]
    }
  },
  "messageSchema": {
    "type": "object",
    "properties": {
      "from": {
        "type": "string"
      },
      "to": {
        "type": "string"
      },
      "subject": {
        "type": "string"
      },
      "text": {
        "type": "string"
      }
    },
    "required": [
      "from",
      "to",
      "subject",
      "text"
    ]
  },
  "optionsSchema": {
    "type": "object",
    "properties": {
      "service": {
        "type": "string"
      },
      "host": {
        "type": "string"
      },
      "port": {
        "type": "integer"
      },
      "secure": {
        "type": "boolean"
      },
      "auth": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "pass": {
            "type": "string"
          }
        }
      }
    },
    "required": [
      "service",
      "host",
      "port",
      "secure",
      "auth"
    ]
  }
}
